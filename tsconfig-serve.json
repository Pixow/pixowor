{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@workbench/*": ["src/workbench/*"],
      "@environment/*": ["src/workbench/environments/*"]
    },
    "lib": [
      "ES2017",
      "ES2016",
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "src/workbench"
  ]
}
