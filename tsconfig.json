{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "plugins": ["plugins/*"],
      "glue": ["glue/*"],
      "workbench": ["workbench/*"],
      "launcher": ["launcher/*"],
    },
    "lib": [
      "ES2017",
      "ES2016",
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "files": ["main.ts"],
  "include": [
    "launcher/**/*",
    "workbench/**/*",
    "plugins/**/*",
    "glue/**/*"
, "main.ts"  ],
  "exclude": [
    "node_modules",
  ]
}
