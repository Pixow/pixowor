{
  "compilerOptions": {
    "outDir": "./workbench/lib",
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "plugins": ["plugins/*"],
      "workbench": ["workbench/*"],
      "launcher": ["launcher/*"],
    },
    "lib": [
      "ES2017",
      "ES2016",
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "files": ["workbench/public_api.ts"],
  "exclude": [
    "node_modules",
  ]
}
